@{
    ViewData["Title"] = "Quiz Result";
}

<partial name="_Notification" />
<div class="container text-center mt-5">
    <h2>Quiz Result</h2>

    <p class="fw-bold text-dark">Your score is: @ViewBag.Score</p>
    <a href="@Url.Action("Index", "Home")" class="btn btn-primary px-5 fw-bold text-dark">Back to Home</a>
    <a href="@Url.Action("Answer", "Quiz")" class="btn btn-primary  fw-bold text-dark">Show Correct Answer</a>
</div>

