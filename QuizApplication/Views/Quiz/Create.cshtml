@model QuizApplication.Models.QuizQuestions

@{
    ViewData["Title"] = "Create";
}
<h2>Under Development</h2>


<div class="row">
    <div class="col-md-4">
        <form asp-action="View">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="QuestionText" class="control-label"></label>
                <input asp-for="QuestionText" class="form-control" />
                <span asp-validation-for="QuestionText" class="text-danger"></span>
                <label asp-for="QuizAnswer" class="control-label"></label>
                <input asp-for="QuizAnswer" class="form-control" />
                <span asp-validation-for="QuizAnswer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="container fixed-bottom">
    <a asp-action="Index" class="btn btn-danger">Back </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
