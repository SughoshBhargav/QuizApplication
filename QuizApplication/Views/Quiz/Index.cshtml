@model IEnumerable<QuizApplication.Models.QuizQuestions>

@{
    ViewData["Title"] = "Quiz";
}
<div class="card shadow border-0 mt-4">

    <div class="card-header bg-primary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Quiz</h2>
            </div>

        </div>
    </div>
    <div class="card-body p-4">

    <form method="post" action="@Url.Action("SubmitAnswers", "Quiz")">
        <table class="table table-bordered table-striped">
            <thead>

                <tr>
                    <th class="text-center">
                        Question No.
                    </th>
                    <th class="text-center">
                        Question
                    </th>
                    <th class="text-center">
                        Answer
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var question in Model.OrderBy(q => q.QuestionID))
                {
                    <tr>
                        <td class="text-center">@question.QuestionID</td>
                        <td>@question.QuestionText</td>
                        <td class="text-center">
                            <div class="w-75 btn-group col" role="group">
                                <div class="col">
                                    <input type="radio" required id="true-@question.QuestionID" name="answers[@question.QuestionID]" value="True" class="m-2" />
                                    <label>True</label>
                                    <input type="radio"  required id="false-@question.QuestionID" name="answers[@question.QuestionID]" value="False" class="m-2" />
                                    <label>False</label>
                                </div>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
        <div class="text-center">
                <input type="submit" value="Submit" class="btn btn-primary text-dark fw-bold" />
                <a asp-controller="Home" asp-action="Index" class="btn btn-danger px-4 text-center text-dark fw-bold">BACK</a>
        </div>
    </form>
    </div>

</div>

